<div class="container">
	<div class="bg">
		<div class="row">
			<div class="col-sm-10">
				<div class="contact-form">
					<h2 class="title text-center">Editar Producto</h2>
					<% if(flash && flash.err) { %>
					<ul class="alert alert-success">
						<% Object.keys(flash.err).forEach(function(error){ %>
						<li> <%- JSON.stringify(flash.err[error]) %></li>
						<% }) %>
					</ul>
					<% } %>
					<div class="status alert alert-success" style="display: none"></div>
					<form id="main-contact-form" class="contact-form row" method="post" action="/producto/update/<%=producto.id%>">
						<div class="form-group col-md-10">
							<input type="number" name="codigo" class="form-control" required="required" value="<%=producto.codigo%>" placeholder="Codigo">
							
						</div>
						<div class="form-group col-md-10">
							<input type="text" name="nombre" value="<%=producto.nombre%>" class="form-control" required="required" placeholder="Nombre">
							
						</div>
						<%if(producto.ancho){ %>
						<div class="form-group col-md-10">
							<input type="text" value="<%=producto.ancho%>"  name="ancho" class="form-control" required="required" placeholder="Ancho">
							
						</div>
						<%}else{%>
						<div class="form-group col-md-10">
							<input type="text"  name="ancho" class="form-control" required="required" placeholder="Ancho">
							
						</div>
						<%}%>
						<%if(producto.alto){ %>
						<div class="form-group col-md-10">
							<input type="text" name="alto" value="<%=producto.alto%>" class="form-control" required="required" placeholder="Alto">
							
						</div>
						<%}else{%>
						<div class="form-group col-md-10">
							<input type="text" name="alto"  class="form-control" required="required" placeholder="Alto">
						</div>
						<%}%>
						<div class="form-group col-md-10">
							<textarea type="text" name="descripcion" class="form-control" required="required" placeholder="descripcion" rows="3"><%=producto.descripcion%></textarea>
						</div>
						<div class="form-group col-md-10">
							<input type="number" value="<%=producto.cantidadBodega%>" name="cantidadBodega" class="form-control" required="required" placeholder="Cantidad en Bodega">
						</div>
						<div class="form-group col-md-10">
							<input type="text" name="garantia" value="<%=producto.garantia%>" class="form-control" required="required" placeholder="Garantia">
						</div>
						<div class="form-group col-md-10">
							<input type="text" name="precio" value="<%=producto.precio%>" class="form-control" required="required" placeholder="Precio">
						</div>
						<div class="form-group col-md-10">
							<select class="form-control" name="provedor">
								<% provedores.forEach(function(provedor){%>
								<option value="<%=provedor.id%>"><%=provedor.codigo%>/<%=provedor.nombre%></option>
								<%})%>
							</select>
						</div>
						<div class="form-group col-md-10">
							<select class="form-control" name="tipoProducto">
								<% tiposDeProducto.forEach(function(tipoProducto){%>
								<option  value="<%=tipoProducto.id%>"><%=tipoProducto.codigo%>/<%=tipoProducto.nombre%></option>
								<%})%>
							</select>
						</div>
						<div class="form-group col-md-10">
							<input type="submit" name="submit" class="btn btn-primary pull-right" value="Guardar">
						</div>
					</form>
					<form id="main-contact-form" class="contact-form row" method="post" action="/imagenproducto/new/<%=producto.id%>">
						<div class="form-group col-md-10">
							<input type="submit" name="submit" class="btn btn-primary pull-right" value="Agregar Imagen">
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>